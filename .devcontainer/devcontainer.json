{
  "name": "PrivateGPT Development (NVIDIA GPU)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "privategpt-dev",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  
  // Post-create commands
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  
  // Post-start commands
  "postStartCommand": "python -c \"import torch; print(f'ðŸš€ CUDA Available: {torch.cuda.is_available()}'); print(f'ðŸŽ¯ CUDA Device: {torch.cuda.get_device_name(0) if torch.cuda.is_available() else \"No GPU\"}')\"",
  
  // Features
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  // Container environment
  "containerEnv": {
    // Development
    "NODE_ENV": "development",
    "PYTHONPATH": "/workspace",
    
    // NVIDIA/CUDA
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "all",
    "CUDA_VISIBLE_DEVICES": "0",
    "TF_FORCE_GPU_ALLOW_GROWTH": "true",
    
    // PrivateGPT
    "PGPT_PROFILES": "local,dev,gpu",
    "PGPT_DATA_DIR": "/workspace-data",
    "PGPT_MODELS_DIR": "/workspace-models",
    "PGPT_DB_DIR": "/workspace-db",
    "PGPT_DEVICE": "cuda:0",
    
    // UI
    "STREAMLIT_SERVER_PORT": "8501",
    "STREAMLIT_SERVER_ADDRESS": "0.0.0.0",
    
    // Terminal
    "TERM": "xterm-256color",
    "SHELL": "/bin/zsh"
  },
  
  // Forward ports
  "forwardPorts": [
    8501,  // Streamlit UI
    8000,  // FastAPI
    8888,  // Jupyter
    3000,  // Node dev
    5432,  // PostgreSQL
    6379,  // Redis
    9000,  // MinIO API
    9001   // MinIO Console
  ],
  
  "portsAttributes": {
    "8501": {
      "label": "PrivateGPT UI",
      "onAutoForward": "notify",
      "protocol": "http"
    },
    "8000": {
      "label": "PrivateGPT API",
      "onAutoForward": "notify",
      "protocol": "http"
    },
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify",
      "protocol": "http"
    }
  },
  
  // App ports
  "appPort": [8501, 8000, 8888],
  
  // Customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "nvidia.nsight-vscode-edition",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "cheshirekow.cmake-format",
        "gruntfuggly.todo-tree"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.extraPaths": ["/workspace"],
        "python.analysis.typeCheckingMode": "basic",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay"
      }
    }
  },
  
  // Mounts
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/config,target=/home/vscode/.config,type=bind"
  ],
  
  // GPU run arguments
  "runArgs": [
    "--init",
    "--gpus", "all",
    "--ipc", "host",
    "--shm-size", "8g",
    "--ulimit", "memlock=-1",
    "--ulimit", "stack=67108864"
  ],
  
  // Wait for services
  "waitFor": {
    "postgres": {
      "timeout": 60
    }
  }
}
